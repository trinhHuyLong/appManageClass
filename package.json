{
  "name": "class-manager-app",
  "version": "1.0.0",
  "main": "main.js",
  "build": {
    "appId": "com.example.classmanager",
    "productName": "Class Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ],
    "win": {
      "target": "nsis"
    }
  },
  "scripts": {
    "start": "npx electron .",
    "build": "electron-builder",
    "dev": "npx postcss renderer/style.css -o renderer/output.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dayjs": "^1.11.13",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17"
  }
}
